/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "baseUrl": ".",
    "paths": {
      "@app/shared/utils": ["./src/app/shared/utils/index.ts"],
      "@app/shared/enums": ["./src/app/shared/enums/index.ts"],
      "@app/shared/pipes": ["./src/app/shared/pipes/index.ts"],
      "@app/shared/types": ["./src/app/shared/types/index.ts"],
      "@app/shared/constants": ["./src/app/shared/constants.ts"],

      "@app/core/layout": ["./src/app/core/layout/index.ts"],
      "@app/core/containers/not-found-page/components": [
        "./src/app/core/containers/not-found-page/components/index.ts"
      ],

      "@app/store": ["./src/app/store/index.ts"],

      "@app/features/auth/components": [
        "src/app/features/auth/components/index.ts"
      ],
      "@app/features/auth/containers": [
        "./src/app/features/auth/containers/index.ts"
      ],
      "@app/features/auth/guards": ["./src/app/features/auth/guards/index.ts"],
      "@app/features/auth/models": ["./src/app/features/auth/models/index.ts"],
      "@app/features/auth/services": [
        "./src/app/features/auth/services/index.ts"
      ],
      "@app/features/offers/components": [
        "./src/app/features/offers/components/index.ts"
      ],
      "@app/features/offers/containers": [
        "./src/app/features/offers/containers/index.ts"
      ],
      "@app/features/offers/containers/offer-details-page/components": [
        "./src/app/features/offers/containers/offer-details-page/components/index.ts"
      ],
      "@app/features/offers/models": [
        "./src/app/features/offers/models/index.ts"
      ],
      "@app/features/offers/services": [
        "./src/app/features/offers/services/index.ts"
      ],
      "@app/features/offers/offers-slice": [
        "./src/app/features/offers/offers-slice/index.ts"
      ],
      "@app/core/containers/not-found-page": [
        "./src/app/core/containers/not-found-page/index.ts"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
